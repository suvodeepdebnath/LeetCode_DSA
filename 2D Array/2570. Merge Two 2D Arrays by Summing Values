class Solution {
public:
    vector<vector<int>> mergeArrays(vector<vector<int>>& nums1, vector<vector<int>>& nums2) {
        int i = 0, j = 0;
        
        vector<vector<int>> result;
        int n = nums1.size();
        int m = nums2.size();
        
        while(i < n && j < m){
            vector<int> curr;
            if(nums1[i][0] == nums2[j][0]){
                curr.push_back(nums1[i][0]);
                curr.push_back(nums1[i++][1] + nums2[j++][1]);
            }else if(nums1[i][0] < nums2[j][0]){
                curr.push_back(nums1[i][0]);
                curr.push_back(nums1[i++][1]);
            }else{
                curr.push_back(nums2[j][0]);
                curr.push_back(nums2[j++][1]);
            }
            result.push_back(curr);
        }
        
        while(i < n){
            vector<int> curr;
            curr.push_back(nums1[i][0]);
            curr.push_back(nums1[i++][1]);
            result.push_back(curr);
        }
        
        while(j < m){
            vector<int> curr;
            curr.push_back(nums2[j][0]);
            curr.push_back(nums2[j++][1]);
            result.push_back(curr);
        }
        
        return result;
    }
};
